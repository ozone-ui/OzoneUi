  },
  "repository": {
    "type": "git",
    "url": "https://github.com/abusiraj84/Ozone-ui.git",
    "directory": "packages/ui"
  },
  "publishConfig": {
    "@abusiraj84:registry": "https://npm.pkg.github.com"
